pipeline {
    agent any
    environment {
        PROJECT_NAME = "Neptun"
        OWNER_NAME = "Gadi"
    }
    
    stages {
        stage("1-Build") {
            steps {
                echo "Start of Stage Build..."
                echo "Building....."
                echo "End of Stage Build..."
            }
        }
        stage("2-Test") {
            steps{
                echo "Start of Stage Test..."
                echo "Testing......"
                echo "hello $PROJECT_NAME"
                echo "Owner is $OWNER_NAME"
                echo "End of Stage Build"
                
            }
        }
        stage("3-Deploy") {
            steps {
                echo "Start of Stage Deply..."
                echo "Deploying......"
                sh "ls -la"
                sh '''
                    echo "Line1"
                    chmod test.sh 777
                    ./test.sh
                    echo "Line2"
                '''
                echo "End of Stage Build..."
            }
        }
        stage("4-Celebrate") {
            steps {
                echo "Congratulations!"
            }
        }
    }
}
